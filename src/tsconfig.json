    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "../dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "fusiontime.module.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}
